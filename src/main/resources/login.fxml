<AnchorPane prefHeight="300.0" prefWidth="480.0" style="-fx-background-color: #c0d6df;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pujprojekt.controller.LoginController">
   <children>
      <Label layoutX="78.0" layoutY="71.0" text="Email address" textFill="#4f6d7a" AnchorPane.topAnchor="66.0">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font></Label>
      <TextField fx:id="UserEmail" layoutX="43.0" layoutY="86.0" style="-fx-background-radius: 5px;" />
      <Label layoutX="90.0" layoutY="124.0" text="Password" textFill="#4f6d7a" AnchorPane.topAnchor="120.0">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font></Label>
      <PasswordField fx:id="UserPassword" layoutX="43.0" layoutY="139.0" style="-fx-background-radius: 5px;" />
      <Button fx:id="loginButton" layoutX="87.0" layoutY="183.0" mnemonicParsing="false" onAction="#Login" prefHeight="25.0" prefWidth="65.0" style="-fx-background-color: #4F6D7A; -fx-background-radius: 6px;" text="Log in" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font></Button>
